<h3 class="content-header">Make a new poll</h3>
<div class="internal">
  <form class="create-poll-form" method="post" action="/poll/<%= pollid %>">
    <div id="poll-name-wrapper">
      <label>Poll name</label>
      <input type="text" placeholder="Name" name="name">
    </div>
    <div class="options">
      <div><h5 id="add-option" style="display: inline-block; cursor: pointer; text-decoration: underline">Add more options</h5></div>
      <div>
        <label>Option</label>
        <input type="text" name="option">
      </div>
      <div>
        <label>Option</label>
        <input type="text" name="option">
      </div>
    </div>
    <div class="privacy">
      <h4>Privacy</h4>
      <div class="checkbox-field">
        <p>Private</p>
        <input class="checkbox" type="checkbox" name="private">
      </div>
      <div class="checkbox-field">
        <p>Public</p>
        <input class="checkbox" type="checkbox" name="public" checked>
      </div>
    </div>
    <button class="form-button" type="submit">Submit</button>
  </form>
</div>
