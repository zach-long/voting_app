<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <% if (user) { %><li><a href="/u">Profile</a></li><% } %>
      </ul>
    </nav>
    <div>
      <% if (!user) { %>
      <ul>
        <li>Register</li>
        <li>Log in</li>
      </ul>
      <% } else { %>
      <ul>
        <li>Welcome, <%= user.name %></li>
      </ul>
      <% } %>
    </div>
  </header>
