<body>
  <header>
    <nav>
      <div>
        <a href="/"><div><i class="fa fa-home" aria-hidden="true"></i><span class="mobile-sensitive">Home</span></div></a>
        <% if (!user) { %>
          <a class="login"><div><i class="fa fa-sign-in" aria-hidden="true"></i><span class="mobile-sensitive">Log in, or create an account.</span></div></a>
        <% } else { %>
          <a href="/u/logout" class="logout"><div><i class="fa fa-sign-out" aria-hidden="true"></i><span class="mobile-sensitive">Log out</span></div></a>
        <% }; %>
      </div>
      <div>
        <% if (user) { %>
          <p>Welcome, <%- user.name %>.</p>
        <% }; %>
      </div>
    </nav>
  </header>
