<% include components/header.ejs %>

  <a href="/u" class="back-button">Go back</a>

  <div class="main-content">
    <h3 class="content-header"><%= poll.name %></h3>
    <div class="internal">
      <% poll.options.forEach(function(option) { %>
        <%- include('components/voting_result', {choice: option.choice, votes: option.votes}) %>
      <% }) %>
      <p class="caption">You voted "<b><%= vote %></b>"</p>
    </div>
  </div>

  <!-- owner section -->
  <% if ((user) && (String(poll.creator) === String(user._id))) { %>

    <% if (poll.privacy === 'private') { %>
      <p>Send this link to a friend: <%= req.hostname + req.originalUrl %></p>
    <% }; %>

  <% }; %>

<% include components/footer.ejs %>
